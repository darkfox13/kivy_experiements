WindowManager:
    Main_Menu:
    ImagesExample:
    Wid2:
    Page:
    CanvasExample:
    CanvasExample2:
    CanvasExample3:
    CanvasExample4:
    CanvasExample5:
    CanvasExample6:
    CanvasExample7:


<Main_Menu>:
    name: "Main_Menu"
    GridLayout:
        rows: 4
        Button:
            text: "images"
            font_name: "font/Lcd.ttf"
            font_size: "30dp"
            on_release: app.root.current = "ImagesExample"

        Button:
            text: "counters and sliders"
            font_name: "font/Lcd.ttf"
            font_size: "30dp"
            on_release: app.root.current = "Wid2"
        Button:
            text: "page layout"
            font_name: "font/Lcd.ttf"
            font_size: "30dp"
            on_release: app.root.current = "Page"
        Button:
            text: "Canvas"
            font_name: "font/Lcd.ttf"
            font_size: "30dp"
            on_release: app.root.current = "CanvasExample"
#: set s dp(150)

<CanvasExample>:
    name: "CanvasExample"
    Widget:
        canvas:
            Color:
                rgb: 1, 0, 0
            Line:
                circle: (200, 200, 100)
                width: 2
            Line:
                ellipse: (500, 300, 100, 200)
                width: 2
            Color:
                rgb: 0, 0, 1
            Rectangle:
                pos: 200, 500
                size: dp(200), dp(100)
            Rectangle:
                pos: self.center_x-s/2, self.center_y-s/2
                size: s, s
            Line:
                points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width,0)
                # lines points work in location pairs the x axis is the first value and y is the second
                width: 4
        Button:
            text: "back"
            pos: 500, 500
            on_release: app.root.current = "Main_Menu"
        Button:
            text: "canvas 2"
            pos: 0, 500
            on_release: app.root.current = "CanvasExample2"

<CanvasExample2>:
    name: "CanvasExample2"
    Widget:
        canvas:
            Color:
                rgb: 0,1, 0
            Line:
                points: (self.width/2, 0, self.width/2, self.height)
                width: 5
            Line:
                points: (0, self.height/2, self.width, self.height/2)
                width: 5
        Button:
            text: "canvas 3"
            pos: 0, 500
            on_release: app.root.current = "CanvasExample3"

<CanvasExample3>:
    name: "CanvasExample3"
    Widget:
        canvas:
            Line:
                circle: (200, 200, 100) #centre_x, centre_y, radius
                width: 5

            Line:
                ellipse: (500, 300, 100, 200) #centre_x, centre_y, radius_x, radius_y
                width: 8

            Color:
                rgb: 0, 1, 0, 0.5

            Line:
                rectangle: (800, 100, 300, 200) # x,y,w,h
                width: 2

        Button:
            text: "canvas 4"
            pos: 0, 500
            on_release: app.root.current = "CanvasExample4"

<CanvasExample4>:
    name: "CanvasExample4"
    Widget:
        Button:
            text: "Left"
            pos: 0, 500
            on_press: root.on_move_square_press()
        Button:
            text: "Right"
            pos: 100, 500
            on_press: root.on_move_square_right()
        Button:
            text: "5"
            pos: 300, 500
            on_release: app.root.current = "CanvasExample5"

        Button:
            pos: 500, 500
            text: "6"
            on_release: app.root.current = "CanvasExample6"


<CanvasExample5>:
    name: "CanvasExample5"


<CanvasExample6>:
    name: "CanvasExample6"
    BoxLayout
        size: root.size
        Widget:
            canvas:
                Color:
                    rgb: 0, 0, 0, 0.5
                Rectangle:
                    size: self.size

        RelativeLayout:
            canvas:
                Color:
                    rgb: 1, 0, 0, 0.5
                Rectangle:
                    size: self.size
            Button:
                text: "7"
                pos: dp(10), dp(10)
            #on_release: app.root.current = "CanvasExample7"

<CanvasExample7>:
    name: "CanvasExample7"
    BoxLayout:
        RelativeLayout:
            canvas:
                Color:
                    rgb: 0, 0, 1
                Rectangle:
                    size: self.size

        RelativeLayout:
            canvas:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    size: self.size

        RelativeLayout:
            canvas:
                Color:
                    rgb: 1, 0, 0
                Rectangle:
                    size: self.size

<ImagesExample>:
    name:"ImagesExample"
    GridLayout:
        cols: 4
        Image:
            source: "images/cake.jpg"
        Image:
            source: "images/cake.jpg"
            allow_stretch: True
        Image:
            source: "images/cake.jpg"
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "Back"
            on_release: app.root.current = "Main_Menu"


<Wid2>:
    name: "Wid2"
    GridLayout:
        cols: 3
        ToggleButton:
            text: "off"
            on_state: root.on_toggle_button_state(self)
            size_hint: None, 1
            width: "100dp"
            font_size: "40dp"

        Button:
            text: "count"
            font_size: "80dp"
            color: 1,0,0,1
            on_press: root.on_button_click()
            disabled: not root.Active_Button

        Label:
            text: root.my_text
            font_name: "font/Lcd.ttf"
            font_size: "80dp"
            color: 0.02, 0.45, 1, 1

        Switch:
            #on_active: root.on_switch_active(self)
            on_active: my_switch
            id: my_switch
            size_hint: None, 1
            width: "100dp"
            font_size: "40dp"

        Slider:
            id: slider
            min: 0
            max: 100
            value: 50
            #on_value: root.on_value(self)
            orientation: "vertical"
            #disabled: not root.Active_Slider
            disabled: not my_switch.active

        BoxLayout:
            orientation: "vertical"
            Label:
                #text: root.slider_value
                text: str(int(slider.value))
                font_name: "font/Lcd.ttf"
                font_size: "80dp"
                color: 0.02, 0.45, 1, 1
            ProgressBar:
                max: 100
                value: slider.value
        TextInput:
            id: text_input
            text: "please enter name"
            size_hint: None, 1
            width: "100dp"
            font_name: "font/Lcd.ttf"
            font_size: "10dp"
            multiline: False
            on_text_validate: root.on_text_validate(self)

        Label:
            text: root.Text_String_str
            size_hint: None, 1
            width: "100dp"
            font_name: "font/Lcd.ttf"
            font_size: "10dp"
        Button:
            text: "back"
            on_release: app.root.current = "Main_Menu"

<Page>:
    name: "Page"
    PageLayout:
        Wid:
        Box:
        Anchor:
        Grid:
        Stack:

<Scroll@ScrollView>:
    do_scroll_x: False
    do_scroll_y: True

    Stack:
        size_hint_y:None
        height: self.minimum_height

<Stack>:
    #orientation: "rl-bt"

<Grid>:
    cols: 3
    Button:
        text: "grids"
    Box:
    Button:
        text: "fun"

<Anchor>:
#for anchor the options are top, centre, bottom for y and left, centre, right for x
    anchor_x: "center"
    anchor_y: "center"
    BoxLayout:
        size_hint: 0.2, 0.2
        Button:
            text: "making progress"
        Button:
            text: "2"

<Box>:
    #orientation: "vertical"
    Button:
        text: "A"
       #size: "100dp", "100dp"
        size_hint: 0.5, 0.5
        pos_hint: { "y" : 0.25 }

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button
            text:"B1"
        Button
            text:"B2"
        Button
            text:"B3"
        Button
            text:"B4"

    Label
        text:"c"

<wid>:
    Button
        text: "back"
        size: "100dp", "80dp"
        pos: "200dp", "80dp"
        color: 1,0,1,1
        on_release: app.root.current = "Main_menu"
    Label
        text: "hi"
